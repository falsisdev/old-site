<%
  let pageName = "Home";
  let checkSpotify = user.data.listening_to_spotify;
  let checkActivities = JSON.stringify(user.data.activities) === "[]";
  let spotify = checkSpotify ? user.data.spotify : false;
  let activity = {
    start: checkActivities ? null : user.data.activities[0].timestamps.start,
    text1: checkActivities ? null : user.data.activities[0].name,
    text2: checkActivities ? null : user.data.activities[0].details,
    text3: checkActivities ? null : user.data.activities[0].state
  }
  let assets = {
    small: {
      text: checkActivities ? null : user.data.activities[0].assets.small_text,
      image: checkActivities ? null : user.data.activities[0].assets.small_image
    },
    large: {
      text: checkActivities ? null : user.data.activities[0].assets.large_text,
      image: checkActivities ? null : user.data.activities[0].assets.large_image
    }
  }
  let device = {
    mobile: user.data.active_on_discord_mobile,
    pc: user.data.active_on_discord_desktop,
  }
  let discordUser = {
    username: user.data.discord_user.username,
    public_flags: user.data.discord_user.public_flags,
    id: user.data.discord_user.id,//number
    tag: user.data.discord_user.discriminator,//number
    avatar: user.data.discord_user.avatar,
    avatarURL: `https://cdn.discordapp.com/avatars/${user.data.discord_user.id}/${user.data.discord_user.avatar}.webp`,
    status: user.data.discord_status
  }
  let appid = checkActivities ? null : user.data.activities[0].application_id
  let links = [{
    name: "Github",
    icon: "fa-brands fa-github",
    color: "#333",
    url: "github"
  },{
    name: "Spotify",
    icon: "fa-brands fa-spotify",
    color: "#1db954",
    url: "spotify"
  }]
%>
<%- include('static/Header') %>
<title><%= pageName %> - FalsisDev</title>
<link rel="icon" href="<%= discordUser.avatarURL %>" type="image/x-icon" />
<body class="mt-8 max-w-screen-lg p-5 py-1 mx-auto transition-all duration-300">
  <div align="center" class="rounded-t-[10px] w-full pb-[0.25rem] bg-[#<%= discordUser.status === 'dnd' ? 'ED4245' :  discordUser.status === 'idle' ? 'faa61a' : discordUser.status === 'online' ? '57F287' : discordUser.status === 'offline' ? '99aab5' : 'EB459E' %>]">
</div>
 <div class="flex pb-[25px] pt-[25px] bg-[#080808] break-word rounded-b-[10px]">
    <img class="ml-8 rounded-full border-[3.2px] w-[8rem] h-[8rem] border-[#<%= discordUser.status === 'dnd' ? 'ED4245' :  discordUser.status === 'idle' ? 'faa61a' : discordUser.status === 'online' ? '57F287' : discordUser.status === 'offline' ? '99aab5' : 'EB459E' %>]" src="<%= discordUser.avatarURL %>"/>
    <div class="ml-4 mt-8">
      <h1 class="absolute pl-[10px] text-red-500 text-4xl"><%= discordUser.username %><span class="text-[15px] font-bold text-gray-200">#<%= discordUser.tag %></span></h1>
      
      <p class="text-[19px] text-gray-200/90 pt-10 ml-2">An Alone Web Developer</p>
      
    </div>
 </div>
 <div class="mt-5">
   <div class="bg-[#080808] w-full p-4 text-[18px] text-center rounded-lg">
      <h1><span class="text-red-500"><i class="fa-solid fa-triangle-exclamation"></i></span><span style="color: white;"> This website is currently in </span><span class="text-green-300">early-access</span>. <span style="color: white;">Please report bugs if any.</span></h1>
   </div>
 </div>
 <div class="mt-5">
  <div class="bg-[#080808] w-full p-4 rounded-lg">
     <div class="mt-2">
       <h1 class="font-semibold text-3xl text-white text-center"><span class="text-red-400">Hello</span>, I’m Falsis ✌️</h1>
       <p style="color: white;" class="p-3 text-gray-200/90 text-[18px] mt-3">
I'm a <a href="https://en.wikipedia.org/wiki/Front-end_web_development" class="Text-red-500"> Front-end Web Developer</a>!<br>
So, I'm interested in <a href="https://en.wikipedia.org/wiki/HTML" class="Text-red-500" title="Hyper Text Markup Language"> <font color="orange"><i class="fa-brands fa-html5"></i></font></a>, <a href="https://en.wikipedia.org/wiki/CSS" class="Text-red-500" title="Cascading Style Sheets"> <font color="#1589FF"><i class="fa-brands fa-css3-alt"></i></font></a> and <a href="https://en.wikipedia.org/wiki/JavaScript" title="JavaScript" class="Text-red-500"> <font color="yellow"><i class="fab fa-js-square"></i></font></a>!<br>
